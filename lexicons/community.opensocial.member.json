{
  "lexicon": 1,
  "id": "community.opensocial.member",
  "defs": {
    "main": {
      "type": "record",
      "description": "Community's confirmation of a member (stored in community's repo)",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["userDid", "membershipRef", "confirmedAt"],
        "properties": {
          "userDid": {
            "type": "string",
            "format": "did",
            "description": "DID of the member"
          },
          "membershipRef": {
            "type": "string",
            "format": "at-uri",
            "description": "AT-URI reference to the user's community.opensocial.membership record"
          },
          "confirmedAt": {
            "type": "string",
            "format": "datetime"
          }
        }
      }
    }
  }
}
